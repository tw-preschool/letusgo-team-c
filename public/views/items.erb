<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Pos Web</title>

  <link href="../lib/bootstrap-3.2.0-dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="../styles/main.css"/>
</head>

<body>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="items.html">Let's Go</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li><a href="../index.html">主页</a></li>
          <li class="active"><a href="#">商品列表</a></li>
        </ul>
      </div>
      <div class="container row col-xs-１">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/shop"><span class="glyphicon glyphicon-shopping-cart"></span> 购物车 (<span id="count"><%= @count %></span>)</a></li>
         <li><a id="logout" href="#" ><span>退出</span></a></li>
      </ul>
      </div>
    </div>
  </nav>

  <div class="container theme-showcase" role="main">
    <div class="panel panel-default">
      <table id="item-table" class="table table-bordered back" style="table-layout:fixed">
        <thead class="table-clo">
          <tr>
            <th class="active" colspan="5" style="text-align:center;background:#ccc;"><h4>商品列表</h4></th>
          </tr>
          <tr>
            <th>名称</th>
            <th>单价(元)</th>
            <th>单位</th>
            <th>描述信息</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
              <tr id=<%= product.id %>>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= product.unit %></td>
                <td><%= product.information %></td>
                <td class="addInCart">
                    <button class="btn btn-primary btn-small" name="add">加入购物车</button>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <script type="text/javascript" src="../lib/jquery-2.1.1/jquery-2.1.1.js"></script>
  <script type="text/javascript" src="../lib/bootstrap-3.2.0-dist/js/bootstrap.js"></script>
  <script type="text/javascript" src="../lib/lodash-2.4.1/lodash.compat.js"></script>
  <script type="text/javascript" src="../scripts/model/item.js"></script>
  <script type="text/javascript" src="../scripts/model/promotion.js"></script>
  <script type="text/javascript" src="../scripts/utils.js"></script>
  <script type="text/javascript" src="../scripts/items.js"></script>
  <script type="text/javascript" src="../scripts/login.js"></script>
</body>
</html>
